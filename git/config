[core]
  excludesfile = ~/.gitignore
  editor = vim
  whitespace = blank-at-eof,blank-at-eol,space-before-tab,tab-in-indent
[user]
  useConfigOnly = true
[color]
  ui = true
[merge]
  tool = gvimdiff
  conflictstyle = zdiff3
[diff]
  renames = true
  algorithm = histogram
  colorMoved = plain
  mnemonicPrefix = true
  renames = true
[alias]
  brv = branch -v
  br = branch
  ci = commit
  cl = clone
  co = checkout
  cp = cherry-pick
  d = diff
  di = diff --ignore-space-change
  dl = show HEAD
  dli = show HEAD --ignore-space-change
  ds = diff --staged
  dsi = diff --staged --ignore-space-change
  dw = diff --color-words
  g = grep
  l = log --oneline --decorate
  l4 = log -4
  ms = merge --squash
  mf = merge --ff-only
  p = pull
  prbs = pull --rebase
  pu = push
  rbs = rebase
  ru = remote update
  s = status --short --branch
  unci = reset --soft HEAD~1
  wipe = reset --hard HEAD --
[push]
  default = current
[rerere]
  enabled = true
  autoupdate = true
[rebase]
  autosquash = true
  autostash = true
  updaterefs = true
[branch]
  sort = -committerdate
[tag]
  sort = version:refname
[fetch]
  prune = true
  pruneTags = true
  all = true
[pager]
  log = diff-so-fancy | less
  show = diff-so-fancy | less
  diff = diff-so-fancy | less
[advice]
  forceDeleteBranch = false
  addIgnoredFile = false
  addEmptyPathspec = false
[init]
  defaultBranch = main
[grep]
  linenumber = true
[includeIf "gitdir:~/w/"]
  path = ~/w/gitconfig
[includeIf "gitdir:~/p/"]
  path = ~/.config/git/p
[includeIf "gitdir:~/.config/"]
  path = ~/.config/git/p
